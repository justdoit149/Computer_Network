/* pages/NowWeather/NowWeather.wxss */

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    background: linear-gradient(#0869d8, #87c1f1);
}

.location {
    font-size: 22px;
    margin-bottom: 10px;
    color: #fff;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
}

.obs-time {
    font-size: 14px;
    color: #fff;
    opacity: 0.8;
}

.current-weather {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20px;
    padding: 15px;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 300px;
}

.temperature-and-icon {
    display: flex;
    align-items: center;
}

.temperature {
    font-size: 28px;
    font-weight: bold;
    color: #ffcc00;
    margin-bottom: 5px;
    margin-right: 10px;
}

.temperature-and-icon image {
    height: 30px;
    width: 30px;
    margin-left: 5px;
    filter: invert(1);
}

.condition,
.wind,
.precip,
.humidity,
.vis,
.apparent-temperature,
.airQuality {
    font-size: 18px;
    color: #fff;
    margin-top: 8px;
    opacity: 0.9;
}