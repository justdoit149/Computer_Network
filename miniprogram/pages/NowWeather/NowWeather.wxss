/* pages/NowWeather/NowWeather.wxss */

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    background-color: #f5f5f5;
}

.location {
    font-size: 18px;
    margin-bottom: 10px;
    color: #333;
}

.update-time {
    font-size: 14px;
    color: #666;
}

.current-weather {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20px;
}

.temperature {
    font-size: 36px;
    font-weight: bold;
    color: #ff6600;
    /* 橙色 */
}

.condition,
.wind,
.precip,
.humidity,
.vis,
.apparent-temperature {
    font-size: 16px;
    color: #666;
    margin-top: 5px;
}