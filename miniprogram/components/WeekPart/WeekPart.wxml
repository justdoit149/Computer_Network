<!-- components/WeekPart/WeekPart.wxml -->
<view class="container">
    <view class="header">
        <view class="flex_one">
            <image src="/images/{{weekWeather.daily[0].iconDay}}.svg" style="height: 100rpx;width: 100rpx;filter: invert(1);"></image>
            <view class="temperature">{{ weekWeather.daily[0].textDay}}</view>
            <image src="/images/{{weekWeather.daily[1].iconDay}}.svg" style="height: 100rpx;width: 100rpx;filter: invert(1);"></image>
            <view class="temperature">{{ weekWeather.daily[1].textDay}}</view>
        </view>
        <view class="tips">查看7天天气</view>
    </view>
</view>